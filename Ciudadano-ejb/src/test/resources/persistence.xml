<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="Ciudadano" transaction-type="JTA">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <jta-data-source>Conexion</jta-data-source>
    <class>com.savi.ciudadano.modelo.entidades.Ciudad</class>
    <class>com.savi.ciudadano.modelo.entidades.Ciudadano</class>
    <class>com.savi.ciudadano.modelo.entidades.Correo</class>
    <class>com.savi.ciudadano.modelo.entidades.Direccion</class>
    <class>com.savi.ciudadano.modelo.entidades.Pais</class>
    <class>com.savi.ciudadano.modelo.entidades.Provincia</class>
    <class>com.savi.ciudadano.modelo.entidades.Sector</class>
    <class>com.savi.ciudadano.modelo.entidades.Telefono</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="eclipselink.logging.level.sql" value="FINEST"/>
      <property name="eclipselink.logging.parameters" value="true"/>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
    </properties>
  </persistence-unit>
</persistence>
